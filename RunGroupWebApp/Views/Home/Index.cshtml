@{
    ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">RunGroops</h1>
        <p class="lead text-muted">Something short and leading....</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Mian call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <h1 class="fw-light">Running clubs near @Model.City, @Model.State</h1>

            @if (Model.Clubs == null)
            {
                <h1 class="fw-light">
                    There are not runner in you area!
                    <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    and create one!
                </h1>
            }
            else
            {
                @foreach (var item in Model.Clubs)
                {
                    <div class="col-md-4">
                        <div class="card md-4 box-shadow">
                            <img src="@item.Image" class="bd-placeholder-img card-img-top" width="100%" height="225"></img>
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @* <button type="button" class="btn btn-outline-secondary">View</button> *@
                                        <a type="btn btn-success" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>